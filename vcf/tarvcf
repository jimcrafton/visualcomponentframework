echo Preparing list of files for vcf version $1...
find ./include ./src ./ImageFormats ./build ./VCFBuilder2 ./AppServer ./ClassServer -iname *.h -o -iname *.hpp -o -iname *.c -o -iname *.dsw -o -iname *.dsp -o -iname *.bmp -o -iname *.rgs -o -iname *.rc -o -iname *.idl > srcfiles.out
find ./include ./src ./ImageFormats ./build ./VCFBuilder2 ./AppServer ./ClassServer -iname *.def -o -iname *.vcfdir -o -iname *.vcp -o -iname *.ico -o -iname *.rc2 -o -iname *.odl -o -iname *.vff -o -iname *.inf > srcfiles1.out
find ./include ./src ./ImageFormats ./build ./VCFBuilder2 ./AppServer ./ClassServer -iname *.cpp -o -iname *.CPP -o -iname *.HPP -o -iname *.cxx -o -iname *.CXX -o -iname *.cur -o -iname *.CUR > srcfiles2.out

find ./tests -iname *.h -o -iname *.cpp -o -iname *.CPP -o -iname *.dsw -o -iname *.dsp -o -iname *.bmp -o -iname *.rgs -o -iname *.rc -o -iname *.idl -o -iname *.def -o -iname *.ico -o -iname *.rc2 -o -iname *.odl -o -iname *.vff -o -iname *.html > tests.out
cat srcfiles.out srcfiles1.out srcfiles2.out tests.out > files.out
notepad files.out &
echo Creating tar file...
tar -cf ./vcf.$1.tar -T files.out
tar -rf ./vcf.$1.tar readme.txt
tar -rf ./vcf.$1.tar vcfLicense.txt
tar -rf ./vcf.$1.tar tarvcf
rm files.out
rm tests.out
rm srcfiles.out
echo Compressing tar file with gzip...
gzip -f ./vcf.$1.tar
mv ./vcf.$1.tar.gz ./uploadToSF/./vcf.$1.tar.gz

echo Done ! 