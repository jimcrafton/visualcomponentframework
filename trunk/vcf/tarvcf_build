echo Preparing list of files for vcf version $1...
find ./build -iname *.h -o -iname *.hpp -o -iname *.c -o -iname *.dsw -o -iname *.dsp -o -iname *.bmp -o -iname *.rgs -o -iname *.rc -o -iname *.idl > srcfiles.out
find ./build -iname *.def -o -iname *.vcfdir -o -iname *.vcp -o -iname *.ico -o -iname *.rc2 -o -iname *.odl -o -iname *.vff > srcfiles1.out
find ./build -iname *.cpp -o -iname *.CPP -o -iname *.HPP -o -iname *.cxx -o -iname *.CXX -o -iname *.cur -o -iname *.CUR > srcfiles2.out

cat srcfiles.out srcfiles1.out srcfiles2.out > files.out
notepad files.out &
echo Creating tar file...
tar -cf ./vcfbuild.$1.tar -T files.out
rm files.out
rm srcfiles.out
echo Compressing tar file with gzip...
gzip -f ./vcfbuild.$1.tar

echo Done ! 